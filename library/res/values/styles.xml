<resources xmlns:tools="http://schemas.android.com/tools">
  <style name="CalendarTitleLight">
    <item name="android:textSize">@dimen/calendar_text_medium</item>
    <item name="android:textColor">@color/calendar_text_active</item>
    <item name="android:textStyle">bold</item>
  </style>
  <style name="CalendarTitleDark" parent="@style/CalendarTitleLight">
    <item name="android:textColor">@color/calendar_text_active_dark</item>
  </style>

  <style name="CalendarCell">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_weight">1</item>
    <item name="android:gravity">center</item>
    <item name="android:textAlignment" tools:ignore="NewApi">center</item>
  </style>

  <style name="CalendarCell.DayHeaderLight">
    <item name="android:textColor">@color/calendar_text_active</item>
    <item name="android:textSize">@dimen/calendar_text_small</item>
  </style>
  <style name="CalendarCell.DayHeaderDark" parent="@style/CalendarCell.DayHeaderLight">
    <item name="android:textColor">@color/calendar_text_active_dark</item>
  </style>

  <style name="CalendarCell.CalendarDateLight">
    <item name="android:textSize">@dimen/calendar_text_medium</item>
    <item name="android:background">@drawable/calendar_bg_selector</item>
    <item name="android:textColor">@color/calendar_text_selector</item>
    <item name="android:clickable">true</item>
    <item name="android:textStyle">bold</item>
  </style>
  <style name="CalendarCell.CalendarDateDark" parent="@style/CalendarCell.CalendarDateLight">
    <item name="android:background">@drawable/calendar_bg_selector_dark</item>
    <item name="android:textColor">@color/calendar_text_selector_dark</item>
  </style>
</resources>
